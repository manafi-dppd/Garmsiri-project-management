{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],    
    "baseUrl": ".",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    // "types": ["node"],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["next-auth"],
    "paths": {
      "@/*": ["./src/*"],
      "@prisma/*": ["./prisma/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*"
, "prisma/_seed.mjs", "src/app/api/menus/update/route.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
